<!DOCTYPE html>
<html>
  <head>
    <title>Pickup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <nav>
     <% if logged_in? %>
       <%= link_to "Logout", logout_path, method: :delete %>
     <% else %>
       <%= link_to "Login", login_path %>
     <% end %>
   </nav>
    <%= yield %>
  </body>
</html>
