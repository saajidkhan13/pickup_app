<div class="field_image">
  <div class="ui raised very padded text container segment" id="splash-box">
    <h1><%= @sport.name %></h1>
    <br>
    <h2>Events:</h2>
    <% @sport.events.each do |event| %>
    <%= link_to event.title, event_path(event) %>
    <% end %>
    <br><br>
    <%= link_to "Edit", edit_sport_path(@sport) %>
    <br>
    <%= link_to "Back", sports_path %>
  </div>
</div>
