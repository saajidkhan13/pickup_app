<%= form_for @event do |f| %>
<label>Sport:</label>
  <%= f.collection_select :sport_id, Sport.all, :id, :name %>
  <br><br><br>
  <label>Title:</label>
  <%= f.text_field :title %>
  <br><br><br>
  <label>Date:</label>
  <%= f.date_field :date %>
  <br><br><br>
  <label>Time:</label>
  <%= f.time_field :time %>
  <br><br><br>
  <label>Location</label>
  <%= f.text_field :location %>
  <br><br><br>
  <label>Duration: (time in mins)</label>
  <%= f.number_field :duration %>
  <br><br><br>
  <%= f.submit %>

<% end %>
